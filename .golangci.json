{
  "linters": {
    "enable": [
      "errcheck",
      "gosimple",
      "govet",
      "ineffassign",
      "sloglint",
      "staticcheck",
      "unused"
    ]
  },
  "linters-settings": {
    "sloglint": {
      "no-mixed-args": true,
      "kv-only": true,
      "attr-only": false,
      "no-global": "all",
      "context": "all",
      "static-msg": false,
      "no-raw-keys": false,
      "key-naming-case": "snake",
      "args-on-sep-lines": true
    }
  }
}